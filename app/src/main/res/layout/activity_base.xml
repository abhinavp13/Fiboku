<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <FrameLayout
        android:id="@+id/main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- The navigation drawer -->
    <FrameLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:background="@android:color/white" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <RelativeLayout
                    android:onClick="navigationDrawerHeaderClicked"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/header_relative_layout">

                    <ImageView
                        android:contentDescription="@string/fiboku_icon"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/fiboku_shadow_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:id="@+id/app_icon_white_image_view"
                        android:layout_above="@+id/agent_name_text_view"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/agent_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:padding="4dp"
                        android:layout_marginBottom="8dp"
                        android:text= "@string/your_name"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

                <View
                    android:layout_below="@+id/header_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#3F51B5"
                    android:id="@+id/view" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view">

                    <LinearLayout
                        android:focusable="true"
                        android:onClick="homeClicked"
                        android:background="@drawable/tile_background"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:contentDescription="@string/home"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="14dp"
                            android:src="@drawable/home_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#DF000000"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text = "@string/home_cap"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#19000000" />


                    <LinearLayout
                        android:focusable="true"
                        android:onClick="uploadedBooksClicked"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/tile_background"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:contentDescription="@string/uploaded_books"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="14dp"
                            android:src="@drawable/uploaded_book"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#DF000000"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text = "@string/uploaded_books"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#19000000" />


                    <RelativeLayout
                        android:focusable="true"
                        android:onClick="messagesClicked"
                        android:background="@drawable/tile_background"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:contentDescription="@string/messages"
                            android:id="@+id/messages_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="14dp"
                            android:src="@drawable/messages"/>

                        <TextView
                            android:id="@+id/message_text_view_in_drawer"
                            android:layout_toEndOf="@+id/messages_image"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text = "@string/messages"/>

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/messsage_counter_relative_layout"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_toEndOf="@+id/message_text_view_in_drawer"
                            android:background="@drawable/circular_view">

                            <TextView
                                android:id="@+id/message_count_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text= "@string/eleven"
                                android:textColor="@android:color/white"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#19000000" />

                    <LinearLayout
                        android:focusable="true"
                        android:onClick="connectionsClicked"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/tile_background"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:contentDescription="@string/connections"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="14dp"
                            android:src="@drawable/connections_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#DF000000"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text = "@string/connections"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#19000000" />


                    <LinearLayout
                        android:focusable="true"
                        android:onClick="feedbackClicked"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/tile_background"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:contentDescription="@string/help_and_feedback"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="14dp"
                            android:src="@drawable/feedback"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#DF000000"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text = "@string/help_and_feedback"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#19000000" />

                    <LinearLayout
                        android:focusable="true"
                        android:onClick="aboutClicked"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/tile_background"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:contentDescription="@string/about"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="14dp"
                            android:src="@drawable/about"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#DF000000"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text = "@string/about"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#19000000" />

                </LinearLayout>


            </RelativeLayout>

        </ScrollView>

    </FrameLayout>


</android.support.v4.widget.DrawerLayout>

